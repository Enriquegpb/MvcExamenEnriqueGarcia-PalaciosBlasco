@model IEnumerable<MvcExamenEnriqueGarcia_PalaciosBlasco.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

<div>
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item">
            <a asp-controller="Libros"
               asp-action="Index"
               asp-route-posicion="1"
               asp-route-genero="Infantil">
                Primero
            </a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Libros"
               asp-action="Index"
               asp-route-posicion="@ViewData["ANTERIOR"]">
                Anterior
            </a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Libros"
               asp-action="Index"
               asp-route-posicion="@ViewData["SIGUIENTE"]">
                Siguiente
            </a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Libros"
               asp-action="Index"
               asp-route-posicion="@ViewData["ULTIMO"]">
                Ultimo
            </a>
        </li>
    </ul>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach (Libro libro in Model)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@libro.Autor</h5>
            <h5 class="card-title">@libro.Titulo</h5>
            <img src="~/images/@libro.Portada" class="card-img-top" alt="@libro.Titulo">
            <a asp-action="Details" asp-controller="Libros" asp-route-idlibro="@libro.IdLibro" class="card-text">@libro.Titulo</a>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
    </div>
}
