@using System.Security.Claims;
<h1> Username: @Context.User.Identity.Name</h1>
<ul class="list-group">
    <li class="list-group-item"><img src="~/images/@Context.User.FindFirstValue("IMAGEN")" /></li>
    <li class="list-group-item">Nombre: @Context.User.FindFirstValue("USERNAME")</li>
    <li class="list-group-item">Apellido: @Context.User.FindFirstValue("APELLIDO")</li>
    <li class="list-group-item">Email: @Context.User.FindFirstValue("EMAIL")</li>

</ul>
