@using System.Security.Claims;
@*Aquí recogeriamos el conteo de los libros que tenermos en session*@
@if (Context.User.Identity.IsAuthenticated != false)
{
        <li class="nav-item">
            <a class="nav-link"
        asp-controller="Libros"
        asp-action="PerfilUsuario">
            <img src="~/images/@Context.User.FindFirstValue("IMAGEN")"> Hola,
                <span style="color:blue">@Context.User.Identity.Name</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link"
        asp-controller="Managed"
        asp-action="LogOut">
                Cerrar Session
            </a>
        </li>
}